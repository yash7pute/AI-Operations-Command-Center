# Google (Gmail / OAuth) credentials
# GMAIL_CLIENT_ID: OAuth 2.0 Client ID from Google Cloud Console.
#   Used to identify your app when starting the OAuth flow for Gmail/Google APIs.
#   Example format: 1234-abcdefg.apps.googleusercontent.com
GMAIL_CLIENT_ID=

# GMAIL_CLIENT_SECRET: OAuth 2.0 Client Secret from Google Cloud Console.
#   Keep this secret. Used together with the client ID to exchange auth codes for tokens.
GMAIL_CLIENT_SECRET=

# GMAIL_REDIRECT_URI: Redirect URI registered in Google Cloud Console for OAuth.
#   Must exactly match one of the authorized redirect URIs for the OAuth client.
#   Example: http://localhost:3000/oauth2callback
GMAIL_REDIRECT_URI=

# Slack credentials
# SLACK_BOT_TOKEN: xoxb-... Bot token for API calls on behalf of the bot user.
#   Required for API methods that post messages or read channel data.
SLACK_BOT_TOKEN=

# SLACK_SIGNING_SECRET: Signing secret used to verify incoming request signatures.
#   Found in the Slack app settings -> Basic Information -> App Credentials.
SLACK_SIGNING_SECRET=

# SLACK_APP_TOKEN: xapp-... App-level token used for Socket Mode (if using).
#   Required when using the Bolt Socket Mode transport (events over websocket).
SLACK_APP_TOKEN=

# Google API keys (for simple API key access)
# GOOGLE_SHEETS_API_KEY: API key for Google Sheets (restrict by referrer/IP recommended).
GOOGLE_SHEETS_API_KEY=

# GOOGLE_DRIVE_API_KEY: API key for Google Drive (restrict by referrer/IP recommended).
GOOGLE_DRIVE_API_KEY=

# Notion
# NOTION_API_KEY: Integration token (secret) from Notion integrations or OAuth.
#   Format: secret_...
NOTION_API_KEY=

# Trello
# TRELLO_API_KEY: API key for Trello developer API.
TRELLO_API_KEY=

# TRELLO_TOKEN: User token (can be generated via Trello auth flow) for account access.
TRELLO_TOKEN=

# Composio (third-party service)
# COMPOSIO_API_KEY: API key for Composio services (place provided by Composio).
COMPOSIO_API_KEY=

# LLM Providers
# GROQ_API_KEY: API key for Groq LLM service (Llama 3.1, Mixtral models).
#   Get free API key from: https://console.groq.com/keys
#   Primary provider for fast inference with Llama 3.1
GROQ_API_KEY=

# TOGETHER_API_KEY: API key for Together AI service (fallback provider).
#   Get free API key from: https://api.together.xyz/settings/api-keys
#   Used as fallback if Groq fails
TOGETHER_API_KEY=

# OPENROUTER_API_KEY: API key for OpenRouter service (secondary fallback).
#   Get API key from: https://openrouter.ai/keys
#   Provides access to multiple models including Claude, GPT-4, etc.
OPENROUTER_API_KEY=

# LLM_DEFAULT_PROVIDER: Default LLM provider to use (groq, together, openrouter).
#   Default: groq
LLM_DEFAULT_PROVIDER=groq

# LLM_DEFAULT_MODEL: Default model to use for LLM operations.
#   Groq: llama-3.1-70b-versatile, llama-3.1-8b-instant, mixtral-8x7b-32768
#   Together: meta-llama/Llama-3-70b-chat-hf, mistralai/Mixtral-8x7B-Instruct-v0.1
#   OpenRouter: openai/gpt-4, anthropic/claude-3-opus
LLM_DEFAULT_MODEL=llama-3.1-70b-versatile

# Token Management
# MAX_DAILY_TOKENS: Maximum number of tokens allowed per day across all providers.
#   Default: 500000 (500k tokens)
#   Helps prevent unexpected API costs and manage usage
MAX_DAILY_TOKENS=500000

# Logging
# LOG_LEVEL: default log level used by application logging (winston).
#   Common values: error, warn, info, verbose, debug, silly
LOG_LEVEL=info
